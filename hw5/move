<html>
    <body>
        <button onclick="job()">點這兒點這兒</button>
        <script>
            function job() {
                left = Math.random() * window.innerWidth;
                top1 = Math.random() * window.innerHeight;
                b.style = `position:${position}; width:${width}; height:${height}; right:${right}; left:${left}; top:${top1};`;
                
                setTimeout(job, 500);
            }   
            let position = "absolute";
            let width = 100;
            let height = 50;
            let left = 20;
            let right = 0;
            let top1 = 20;
            let b = document.querySelector('button');

            b.style = `position:${position}; width:${width}; height:${height}; left:${left}; right:${right}; top:${top1};`;
        </script>
    </body>
</html>
